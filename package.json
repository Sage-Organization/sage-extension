{
  "name": "sage-extension",
  "displayName": "Sage",
  "publisher": "Sage",
  "description": "Sage coding assistant extension for VSCode",
  "icon": "images/logo.png",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/adamloec/sage.git"
  },
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sage.openPanel",
        "title": "Sage: Open Assistant Panel"
      },
      {
        "command": "sage.switchView",
        "title": "Sage: Switch View"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Sage",
      "properties": {
        "sage.localMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable local mode for the backend."
        },
        "sage.isConfigured": {
          "type": "boolean",
          "default": false,
          "description": "Tracks if the user has already configured the backend."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sageSidebar",
          "title": "Sage",
          "icon": "images/sage.svg"
        }
      ]
    },
    "views": {
      "sageSidebar": [
        {
          "type": "webview",
          "id": "sageView",
          "name": "Sage Chat"
        }
      ]
    }
  },
  "dependencies": {
    "axios": "^1.7.9",
    "ollama": "^0.5.13",
    "python-shell": "^5.0.0"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.97.0",
    "typescript": "^4.9.5"
  }
}
